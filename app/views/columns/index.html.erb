<div class="container">
　<div class="row">
    <h1 class="mt-3 text-center">コラム一覧</h1>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>タイトル</th>
          <th>投稿日</th>
          <th></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @columns.each do |column| %>
          <tr>
            <td><%= column.title %></td>
            <td><%= column.created_at.strftime("%Y-%m-%d") %></td>
            <td><%= link_to "このコラムを見る", column_path(column), class: "btn btn-info" %></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
	</div>
</div>
<div class="container">
　<div class="row">
    <div class="col-2"></div>
	　<div class="col-8">
	    <h1 class="mt-3 text-center">コラム一覧</h1>
	     <% @columns.each do |column| %>
	      <table class="table">
	        <tr><td>投稿日：<%= column.created_at.strftime("%Y-%m-%d") %></td></tr>
	        <tr>
	          <td>タイトル：
        	    <%= link_to column_path(column) do %>
        	      <%= column.title %>
        	    <% end %>
	          </td>
	        </tr>
	      </table>
	    <% end %>
	  </div>
	</div>
</div>
<div class="comments">
  <% @post.comments.each do |comment| %>
	  <%= comment.user.name %>
	  <%= comment.created_at.strftime('%Y/%m/%d') %>
	  <%= comment.body %>
		<% if comment.user == current_user %>
      <div class="comment-delete">
        <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, remote: true %>
      </div>
    <% end %>
  <% end %>
</div>
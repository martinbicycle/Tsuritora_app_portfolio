<div class="container">
　<div class="row">
    <div class="col-1"></div>
	　<div class="col-10">
	    <h1 class="mt-5 text-center">お問い合わせ一覧</h1>
      お問い合わせ件数：<%= @contacts.count %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>お問い合わせタイトル</th>
            <th></th>
            <th>お問い合わせユーザー</th>
            <th></th>
            <th>確認したら✅</th>
          </tr>
        </thead>
        <tbody>
          <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.title %></td>
            <td><%= link_to "詳細", contact_path(contact), class: "btn btn-primary" %></td>
            <td><%= contact.user.name %></td>
            <td><%= link_to "詳細", user_path(contact.user_id), class: "btn btn-primary" %></td>
            <td>
              <% if contact.checkflag.present? %>
                <%= button_to "確認済", contact_update_path(contact), {method: :post, class: "btn btn-info"} %>
              <% else %>
                <%= button_to "未確認", contact_update_path(contact), {method: :post, class: "btn btn-danger"} %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-1"></div>
  </div>
  <div class="pagenation-center">
    <%= paginate @contacts %>
  </div>
</div>
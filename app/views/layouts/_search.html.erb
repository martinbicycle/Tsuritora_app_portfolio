<div class="search-form">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content,placeholder: "検索ワードを入力", class: "search_form" %>
    <%= f.select :model, options_for_select({ "投稿" => "post", "コラム" => "column", "タグ" => "tag"}) %>
    <%= f.submit '検索', class: "btn btn-info" %>
  <% end %>
</div>
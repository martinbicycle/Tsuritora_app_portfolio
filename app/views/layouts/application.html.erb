<!DOCTYPE html>
<html>
  <head>
    <title>Tsuritora</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if admin_signed_in? %>
      <header>
        <nav>
          <ul class="header-item">
            <li>
              <%= link_to root_path do %>
                <%= image_tag 'tsuritora_logo.png', size: '180x90' %>
              <% end %>
            </li>
            <li class="list"><%= link_to '質問一覧', contacts_path %></li>
            <li class="list"><%= link_to 'コラム', columns_path %></li>
            <li class="list"><%= link_to 'コラムの投稿', new_column_path %></li>
            <li class="list"><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
          </ul>
        </nav>
      </header>
    <% elsif user_signed_in? %>
      <header>
        <nav>
          <ul class="header-item">
            <li>
              <%= link_to root_path do %>
                <%= image_tag 'tsuritora_logo.png', size: '180x90' %>
              <% end %>
            </li>
            <li class="list"><%= link_to 'マイページ', user_path(current_user) %></li>
            <li class="list"><%= link_to '投稿する', new_post_path %></li>
            <li class="list"><%= link_to 'みんなの投稿', posts_path %></li>
            <li class="list"><%= link_to 'コラム', columns_path %></li>
            <li class="list"><%= link_to 'つりトラの使い方', homes_about_path %></li>
            <li class="list"><%= link_to '質問箱', new_contact_path %></li>
            <li class="list"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
          </ul>
        </nav>
      </header>
    <% else %>
      <header>
        <nav>
          <ul class="header-item">
            <li>
              <%= link_to root_path do %>
                <%= image_tag 'tsuritora_logo.png', size: '180x90' %>
              <% end %>
            </li>
            <li class="list"><%= link_to 'みんなの投稿', posts_path %></li>
            <li class="list"><%= link_to 'つりトラの使い方', homes_about_path %></li>
            <li class="list"><%= link_to 'コラム', columns_path %></li>
            <li class="list"><%= link_to '新規登録', new_user_registration_path %></li>
            <li class="list"><%= link_to 'ログイン', new_user_session_path %></li>
          </ul>
        </nav>
      </header>
    <% end %>
    <%= yield %>
    <div class="wrapper">
      <footer>
        <p>©Copyright Tsuritora. ALL Rights researved.</p>
      </footer>
    </div>
  </body>
</html>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>場所</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to user_path(post.user) do %>
          <%= attachment_image_tag(post.user, :profile_image, :fill, 50, 50, fallback: "no_image.png") %>
          <% end %>
        </td>
        <td><%= link_to post.name, post_path(post), class: "post_#{post.id}" %></td>
        <td><%= post.address %></td>
      </tr>
    <% end %>
  </tbody>
</table>
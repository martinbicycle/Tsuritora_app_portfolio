<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>写真</th>
      <th>場所</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to user_path(post.user) do %>
          <%= attachment_image_tag(post.user, :profile_image, :fill, 50, 50, fallback: "no_image.png") %>
          <% end %>
        </td>
        <td><%= post.name %></td>
        <td class="image_fish">
          <div class="fish_size">
            <%= link_to post_path(post) do %>
              <%= attachment_image_tag post, :image, class: "image-size" %>
            <% end %>
          </div>
        </td>
        <td><%= post.address %></td>
        <td><%= link_to "この投稿を見る", post_path(post), class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
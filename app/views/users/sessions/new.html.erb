<div class="conteiner">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <h1 class="text-center mt-5">ログイン</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field form-group mt-4">
          <%= f.label :メールアドレス, class: "fas fa-envelope" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス", class: "form-control" %>
        </div>

        <div class="field form-group mt-4">
          <%= f.label :パスワード, class: "fas fa-lock" %>
          <%= f.password_field :password, autocomplete: "current-password", :placeholder => "パスワード", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field form-group mt-4">
            <%= f.check_box :remember_me %>
            <%= f.label :ログインの記憶を保持する %>
          </div>
        <% end %>

        <div class="text-center">
          <%=button_tag type: 'submit', class: 'btn btn-warning' do %>
          　<i class="fas fa-fish"></i> ログイン
        　<% end %>
        </div>
      <% end %>

    <%= render "users/shared/links" %>


    </div>
    <div class="col-3"></div>
  </div>
</div>


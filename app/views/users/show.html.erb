<div class="container">
　<div class="row">
	<div class="col-2"></div>
　  <div class="col-8">
      <h1 class="mt-5 text-center">マイページ</h1>
	  <div class="wrapper">
	    <div class="wrapper-left">
	      <%= attachment_image_tag @user, :profile_image, fallback: "no_image.png" , class: "image-circle"%>
        釣り歴：<%= @user.fishing_history %>
	      公開釣果数：<%= @user.posts.count %>

			<tr>
		    <th>フォロー数:</th>
		    <th><%= link_to @user.followings.count, user_followings_path(@user) %></th>
		  </tr>
		  <tr>
		    <th>フォロワー数:</th>
		    <th><%= link_to @user.followers.count, user_followers_path(@user) %></th>
		  </tr>
	    </div>
        <div class="wrapper-center">
          <%= @user.name %>
          <%= @user.introduction %>
        </div>
        <div class="wrapper-right">
			  <% if current_user != @user %>
			    <% if current_user.following?(@user) %>
			      <%= link_to "フォロー外す", user_relationships_path(@user), method: :delete, class: "btn btn-info" %>
			    <% else %>
			      <%= link_to "フォローする", user_relationships_path(@user), method: :post, class: "btn btn-success" %>
			    <% end %>

			  <% end %>
          メールアドレス:<%= @user.email %>
        </div>
	  </div>
	  <tr>
	    <td></td>
	    <td>
	      <% if @user == current_user %>
	        <%= link_to "編集", edit_user_path(@user), class: "btn btn-success" %>
	      <% end %>
	    </td>
	  </tr>
	  <h2><%= @user.name %>さんの釣果</h2>
	  <div class="row">
        <% @user.posts.each do |post| %>
          <table>
            <thead>
        	  <tr>
        	    <td>
        		  <div class="col-6">
        		    <%= link_to post_path(post) do %>
        		      <%= attachment_image_tag post, :image, class: "image-size" %>
        		    <% end %>
        		  </div>
        	    </td>
        	  </tr>
            </thead>
            <tbody>
        	  <tr>
        	    <td>
        		  <div class="col-6">
        		    <%= link_to user_path(post.user_id) do %>
        		      <%= attachment_image_tag post.user, :profile_image, class: "profile-image", fallback: "no_image.png" %>
        		    <% end %><span>
        		  </div>
        	  </td>
        	</tr>
        	<tr>
	          <td>魚種名：<%= post.name %></td>
	        </tr>
	        <tr>
	          <td>サイズ：<%= post.size %></td>
	        </tr>
        </tbody>
      </table>
    <% end %>
      </div>
      <div class="col-2"></div>
    </div>
  </div>
</div>